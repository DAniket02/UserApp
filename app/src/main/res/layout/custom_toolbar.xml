<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="@color/toolbar_color">

    <ImageView
        android:visibility="gone"
        android:id="@+id/imageview_menu"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_margin="@dimen/marginplus1"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_action_menu_white_24dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:src="@drawable/nmmc_white_logo"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/marginplus1"
            android:layout_marginBottom="@dimen/marginplus1"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:visibility="invisible"
            android:src="@drawable/nmmc_white_logo"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/marginplus1" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageviewDashboard"
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="35dp"
        android:layout_margin="@dimen/marginplus1"
        android:layout_gravity="center"
        android:src="@drawable/profile"/>

</LinearLayout>