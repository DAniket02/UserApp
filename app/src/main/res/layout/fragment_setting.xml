<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ui.setting.SettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/marginplus8"
        android:layout_marginRight="@dimen/marginplus3"
        android:layout_marginLeft="@dimen/marginplus3">

        <EditText
            android:id="@+id/editTextFullName_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/textfullname"
            android:layout_marginTop="@dimen/marginplus6"
            android:layout_marginLeft="@dimen/marginplus8"
            android:layout_marginRight="@dimen/marginplus8"
            android:minHeight="@dimen/marginplus8"
            android:paddingLeft="@dimen/marginplus6"
            android:textCursorDrawable="@null"
            android:textColorHint="@color/black_font5"
            android:background="@drawable/gray_border_bg"
            android:textColor="@color/black_font2"
            android:textSize="@dimen/textsizemedium"
            android:inputType="textPersonName"/>


        <EditText
            android:id="@+id/editTextPassword_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/textpassword"
            android:layout_marginTop="@dimen/marginplus5"
            android:layout_marginLeft="@dimen/marginplus8"
            android:layout_marginRight="@dimen/marginplus8"
            android:minHeight="@dimen/marginplus8"
            android:paddingLeft="@dimen/marginplus6"
            android:textCursorDrawable="@null"
            android:textColorHint="@color/black_font5"
            android:background="@drawable/gray_border_bg"
            android:inputType="textPassword"
            android:textColor="@color/black_font2"
            android:textSize="@dimen/textsizemedium"/>

        <EditText
            android:id="@+id/editTextConfirmPassword_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/textconfirmpassword"
            android:layout_marginTop="@dimen/marginplus5"
            android:layout_marginLeft="@dimen/marginplus8"
            android:layout_marginRight="@dimen/marginplus8"
            android:minHeight="@dimen/marginplus8"
            android:paddingLeft="@dimen/marginplus6"
            android:textCursorDrawable="@null"
            android:textColorHint="@color/black_font5"
            android:background="@drawable/gray_border_bg"
            android:inputType="textPassword"
            android:textColor="@color/black_font2"
            android:textSize="@dimen/textsizemedium"/>


        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text_change_password"
            android:padding="@dimen/marginplus2"
            android:textSize="@dimen/textsizemedium"
            android:textAllCaps="true"
            android:textColor="@color/white_color"
            android:onClick="onViewClicked"
            android:background="@drawable/blue_button_bg"
            android:layout_marginTop="@dimen/marginplus5"
            android:layout_marginLeft="@dimen/marginplus8"
            android:layout_marginRight="@dimen/marginplus8"
            android:layout_marginBottom="@dimen/marginplus5"
            tools:ignore="OnClick" />

    </LinearLayout>

</LinearLayout>